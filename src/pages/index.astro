---
import Chip from "@components/Chip.astro";
import Card from "@components/Card.astro";

// Put all your links here
const links: Link[] = [
  // {
  //   desc: "Example Project", // The text that will be rendered
  //   link: "example.com", // The link
  //   icon: "fa-solid fa-home", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  // },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Linktree of Giacomo Marinangeli" />
    <meta name="author" content="Giacomo Marinangeli" />
    <meta property="og:title" content="Giacomo Marinangeli" />
    <meta property="og:description" content="Linktree of Giacomo Marinangeli" />
    <meta
      property="twitter:description"
      content="Linktree of Giacomo Marinangeli"
    />
    <meta property="twitter:title" content="Giacomo Marinangeli" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@jibbolo" />
    <title>Giacomo Marinangeli</title>
    <style>
      @font-face {
        font-family: Geist;
        src: url(/Geist.ttf);
        font-display: swap;
      }
    </style>
  </head>
  <body
    class="bg-[#1e1e1e] flex justify-center items-center w-screen h-screen font-[Geist] text-white"
  >
    <main class="w-[80%] flex flex-col gap-8">
      <h1 class="md:text-6xl text-4xl font-black text-center">
        Giacomo Marinangeli
      </h1>
      <div class="grid justify-center gap-4">
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>
      <div class="flex justify-center gap-8">
        <Chip
          link="https://linkedin.com/in/giacomomarinangeli"
          icon="fa-brands fa-linkedin"
        />
        <Chip link="https://github.com/jibbolo" icon="fa-github" />
        <Chip link="https://x.com/jibbolo" icon="fa-x-twitter" />
      </div>
    </main>
  </body>
</html>
